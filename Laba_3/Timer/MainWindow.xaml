<Window x:Class="Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Timer" Height="425" Width="300">

    <Grid>

        <Menu>
            <MenuItem Header="Файл" >
                <MenuItem x:Name="mi_openFile" Header="Открыть" Click="mi_openFile_Click"></MenuItem>
                <MenuItem x:Name="mi_saveFile" Header="Сохранить" Click="mi_saveFile_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Таймеры">
                <MenuItem x:Name="mi_addTimer" Header="Добавить" Click="mi_addTimer_Click" ></MenuItem>
                <MenuItem x:Name="mi_editTimer" Header="Изменить" Click="mi_editTimer_Click" ></MenuItem>
                <MenuItem x:Name="mi_delTimer" Header="Удалить" Click="mi_delTimer_Click" ></MenuItem>
            </MenuItem>
        </Menu>

        <ListBox x:Name="lb_timerList" Margin="10,20,10,10" FontSize="11" SelectionChanged="lb_timerList_SelectionChanged"/>
        
    </Grid>
</Window>
