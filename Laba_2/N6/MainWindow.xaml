<Window x:Class="N6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:N6"
        mc:Ignorable="d"
        Title="N5" ResizeMode="NoResize" Height="325" Width="455">
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="FontSize" Value="11"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Height" Value="24"></Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Lavender"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="btn_open" Content="Загрузить текст" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btn_open_Click"/>
        <Button x:Name="btn_save" Content="Сохранить текст" HorizontalAlignment="Left" Margin="143,10,0,0" VerticalAlignment="Top" Click="btn_save_Click"/>
        <TextBox x:Name="lb_text"  Margin="10,45,10,10"/>
    </Grid>
</Window>
