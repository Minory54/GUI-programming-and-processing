<Window x:Class="N1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:N1"
        mc:Ignorable="d"
        Title="Журнал" Height="450" Width="800">
    
    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="Background" Value="Lavender"></Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <DataGrid x:Name="dg_Jurnal" Margin="0,24,0,0" Loaded="dg_Jurnal_Loaded"></DataGrid>
        <Menu Height="24px" Margin="0,0,0,0" VerticalAlignment="Top">
            <MenuItem Header="Добавить"></MenuItem>
            <MenuItem Header="Изменить"></MenuItem>
            <MenuItem Header="Удалить"></MenuItem>
        </Menu>
    </Grid>
</Window>
